<h1>My tasks</h1>
<% @tasks.each do |task| %>
  <p>
  <% if task.completed %>
    <input type="checkbox" checked>
  <% else %>
    <input type="checkbox">
  <% end %>
    <%= link_to task.title, task_path(task.id) %>
    <%= link_to 'Delete task', task_delete_path(task),
      method: :delete,
      data: { confirm: "Are you sure ?" } %>
      <div><i class="far fa-trash-alt"></i></div>
  </p>
<% end %>

<%= link_to '+ Add new task', task_new_path %>
