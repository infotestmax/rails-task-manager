<h1><%= @task.title %></h1>
<p>
<%= link_to task_edit_path(@task),
  method: :get do %>
  <i class="fa-solid fa-pen-to-square"></i> Edit task
<% end %>
</p>
<p><%= @task.details %></p>
<p>
<% if @task.completed %>
  <i class="far fa-check-circle"></i>
  The task is completed
<% else %>
  <i class="far fa-circle"></i>
  <!-- input type="checkbox" id="completed" name="completed" -->
  The task is not completed yet
<% end %>
</p>
<p><%= link_to 'Back to list', tasks_path, class: 'btn btn-dark' %></p>
